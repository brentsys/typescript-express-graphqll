{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "attach",
      "name": "Node (Docker)",
      "port": 9229,
      "restart": true,
      "remoteRoot": "/usr/src/app",
      "sourceMaps": true,
      "skipFiles": [
        "/usr/src/app/node_modules/**/*.js",
        "<node_internals>/**"
      ]
    },{
      "type": "node",
      "request": "launch",
      "name": "Script",
      "runtimeExecutable": "${env:VOLTA_HOME}/bin/ts-node",
      "args": [
          "${file}"         
      ],
      "console": "integratedTerminal",
      "sourceMaps": true,
      "internalConsoleOptions": "neverOpen",
      "env": {
          "DEBUG": "*"
      },
      "skipFiles": [
          "<node_internals>/**"
        ]
    }
  ]
}